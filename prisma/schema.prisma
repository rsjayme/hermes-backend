generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Corretor {
  id          String   @id @default(uuid())
  nome        String
  telefone    String   @unique
  ativo       Boolean  @default(true)
  posicaoFila Int      @map("posicao_fila")
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")
  
  leads       Lead[]
  interacoes  Interacao[]
  
  @@map("corretores")
}

model Lead {
  id         String   @id @default(uuid())
  nome       String?
  telefone   String   @unique
  status     String   @default("pendente")
  corretorId String?  @map("corretor_id")
  createdAt  DateTime @default(now()) @map("created_at")
  updatedAt  DateTime @updatedAt @map("updated_at")
  
  corretor   Corretor? @relation(fields: [corretorId], references: [id])
  interacoes Interacao[]
  
  @@map("leads")
}

model Interacao {
  id          String    @id @default(uuid())
  leadId      String    @map("lead_id")
  corretorId  String    @map("corretor_id")
  status      String
  enviadoEm   DateTime  @default(now()) @map("enviado_em")
  respondidoEm DateTime? @map("respondido_em")
  timeoutEm   DateTime? @map("timeout_em")
  
  lead       Lead     @relation(fields: [leadId], references: [id])
  corretor   Corretor @relation(fields: [corretorId], references: [id])
  
  @@map("interacoes")
}
